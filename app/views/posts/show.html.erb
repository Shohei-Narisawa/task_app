<div class="main_container">
  <h3>スケジュール詳細</h3>
  
  <table>
    <tbody>
      <tr>
        <th>タイトル</th>
        <td><%= @post.title %></td>
      </tr>
      <tr>
        <th>開始日</th>
        <td><%= @post.start_at.strftime('%Y年%m月%d日') %></td>
      </tr>
      <tr>
        <th>終了日</th>
        <td><%= @post.end_at.strftime('%Y年%m月%d日') %></td>
      </tr>
      <tr>
        <th>終日</th>
        <td><% if @post.all_day == true %>
                            ○
                        <% else %>
                              
                        <% end %>
        </td>
      </tr>
      <tr>
        <th>スケジュールメモ</th></th>
        <td><%= @post.memo %></td>
      </tr>
    </tbody>
  </table>
  <ul>
    <li><%= link_to "スケジュール一覧に戻る", :posts %></li>
    <li><%= link_to "スケジュールを編集する", [:edit, @post] %></li>
    <li><%= link_to "削除", @post, method: :delete, data: { confirm: "本当に削除しますか？" } %></li>
  </ul>
</div>

<footer>
  <h1><%= "現在の日時 : #{ Date.current&.strftime('%Y年%m月%d日') }" %></h1>
</footer>